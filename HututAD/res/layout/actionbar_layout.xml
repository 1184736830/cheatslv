<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
        <ImageButton
                android:id="@+id/webview_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_marginLeft="0dp"
                android:background="@null"
                android:src="@drawable/actionbar_back_selector"/>
        <ImageButton
                android:id="@+id/webview_update"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_marginRight="0dp"
                android:background="@null"
                android:src="@drawable/actionbar_update_selector"/>
        <TextView
                android:id="@+id/webview_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:singleLine="true"
                android:layout_toLeftOf="@id/webview_update"
                android:layout_toRightOf="@id/webview_back"
                android:textSize="16sp"
                android:gravity="center"
        />
</RelativeLayout>